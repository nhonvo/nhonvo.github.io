---
interface Props {
  title: string;
  description: string;
}

const { title } = Astro.props;
const url = Astro.url.href;
---

<div class="share-buttons flex flex-wrap items-center gap-3 my-12 pt-8 border-t border-base-200 dark:border-base-800">
  <span class="text-xs font-bold uppercase tracking-widest text-base-400 dark:text-base-500 mr-2">Share this post</span>
  
  <!-- Twitter/X -->
  <a
    href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(url)}`}
    target="_blank"
    rel="noopener noreferrer"
    class="p-2 rounded-lg bg-base-100 dark:bg-base-900 border border-base-200 dark:border-base-800 hover:border-accent-500 transition-all duration-300 group"
    title="Share on X"
  >
    <svg class="h-5 w-5 fill-current text-base-600 dark:text-base-400 group-hover:text-accent-500" viewBox="0 0 24 24">
      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
    </svg>
  </a>

  <!-- LinkedIn -->
  <a
    href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(url)}`}
    target="_blank"
    rel="noopener noreferrer"
    class="p-2 rounded-lg bg-base-100 dark:bg-base-900 border border-base-200 dark:border-base-800 hover:border-accent-500 transition-all duration-300 group"
    title="Share on LinkedIn"
  >
    <svg class="h-5 w-5 fill-current text-base-600 dark:text-base-400 group-hover:text-accent-500" viewBox="0 0 24 24">
      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
    </svg>
  </a>

  <!-- Copy Link -->
  <button
    id="copy-link"
    class="p-2 rounded-lg bg-base-100 dark:bg-base-900 border border-base-200 dark:border-base-800 hover:border-accent-500 transition-all duration-300 group"
    title="Copy Link"
  >
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-base-600 dark:text-base-400 group-hover:text-accent-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.828a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
    </svg>
  </button>
</div>

<script>
  function initShare() {
    const copyBtn = document.getElementById("copy-link");
    if (!copyBtn) return;

    copyBtn.addEventListener("click", () => {
      navigator.clipboard.writeText(window.location.href);
      
      const originalIcon = copyBtn.innerHTML;
      copyBtn.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>`;
      
      setTimeout(() => {
        copyBtn.innerHTML = originalIcon;
      }, 2000);
    });
  }

  document.addEventListener("astro:page-load", initShare);
  initShare();
</script>
