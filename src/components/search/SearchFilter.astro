---
import FormattedDate from "../FormattedDate.astro";
import { BASE } from "../../config.ts";

interface Props {
  posts: any[];
}

const { posts } = Astro.props;

// Extract unique tags
const allTags = [...new Set(posts.flatMap((post) => post.data.tags || []))].sort();
---

<div class="search-container space-y-8" id="search-filter-root">
  <!-- Controls -->
  <div class="sticky top-4 z-20 bg-base-100/90 dark:bg-base-950/90 backdrop-blur-md p-4 sm:p-6 rounded-2xl border border-base-200 dark:border-base-800 shadow-xl overflow-hidden">
    <div class="flex flex-col gap-6">
      <div class="flex flex-col md:flex-row gap-4">
        <!-- Search Input -->
        <div class="relative flex-1">
          <div class="absolute inset-y-0 left-0 pl-3.5 flex items-center pointer-events-none text-base-400">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
          <input
            type="text"
            id="search-input"
            placeholder="Search topics, titles, or descriptions..."
            class="w-full pl-11 pr-4 py-2.5 bg-base-50 dark:bg-base-900 border border-base-200 dark:border-base-700 rounded-xl focus:ring-2 focus:ring-accent-500 focus:border-accent-500 outline-none transition-all text-base-900 dark:text-base-100 placeholder:text-base-400 dark:placeholder:text-base-600"
          />
        </div>

        <!-- Sort Select -->
        <div class="relative min-w-[160px]">
          <select 
            id="sort-select"
            class="w-full pl-4 pr-10 py-2.5 bg-base-50 dark:bg-base-900 border border-base-200 dark:border-base-700 rounded-xl focus:ring-2 focus:ring-accent-500 outline-none transition-all text-base-900 dark:text-base-100 appearance-none cursor-pointer"
          >
            <option value="newest">Newest First</option>
            <option value="oldest">Oldest First</option>
            <option value="az">A to Z</option>
            <option value="za">Z to A</option>
          </select>
          <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none text-base-400">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </div>
        </div>
      </div>

      <!-- Tag Filter -->
      <div class="space-y-3">
        <span class="text-[10px] font-bold uppercase tracking-widest text-base-400 dark:text-base-500 px-1">Filter by Tag</span>
        <div class="flex flex-wrap gap-2 text-sm">
          <button
            class="tag-pill active px-4 py-1.5 rounded-full border border-base-200 dark:border-base-800 hover:border-accent-500 transition-all font-medium"
            data-tag="all"
          >
            All Topics
          </button>
          {allTags.map((tag) => (
            <button
              class="tag-pill px-4 py-1.5 rounded-full border border-base-200 dark:border-base-800 hover:border-accent-500 transition-all font-medium"
              data-tag={tag}
            >
              #{tag}
            </button>
          ))}
        </div>
      </div>
      
      <div class="pt-2 border-t border-base-100 dark:border-base-900 text-xs font-medium text-base-500 flex justify-between px-1">
        <span id="results-count">Showing all {posts.length} articles</span>
        <span id="active-filters-info" class="hidden text-accent-600 dark:text-accent-400">Filters applied</span>
      </div>
    </div>
  </div>


  <!-- Post Grid -->
  <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-2" id="posts-grid">
    {posts.map((post, index) => (
      <article 
        class="post-card group relative bg-base-100 dark:bg-base-900 rounded-2xl border border-base-200 dark:border-base-800 p-6 hover:shadow-xl hover:border-accent-500/50 transition-all duration-300 overflow-hidden opacity-0 translate-y-4 animate-fade-in-up"
        style={{ animationDelay: `${index * 50}ms` }}
        data-title={post.data.title.toLowerCase()}
        data-raw-title={post.data.title}
        data-description={post.data.description.toLowerCase()}
        data-tags={JSON.stringify(post.data.tags || [])}
        data-date={post.data.pubDate.getTime()}
      >
        <div class="relative z-10 flex flex-col h-full">
          <div class="flex items-center gap-x-4 text-[10px] uppercase tracking-widest font-bold text-base-400 dark:text-base-500 mb-4">
            <time datetime={post.data.pubDate.toISOString()}>

              <FormattedDate date={post.data.pubDate} />
            </time>
          </div>
          <div class="mb-3">
            <h3 class="text-xl font-bold leading-tight text-base-900 dark:text-base-100 group-hover:text-accent-600 dark:group-hover:text-accent-400 transition-colors">
              <a href={BASE + `/posts/${post.id}/`}>
                <span class="absolute inset-0"></span>
                {post.data.title}
              </a>
            </h3>
          </div>
          <p class="text-sm leading-relaxed text-base-600 dark:text-base-400 line-clamp-3 mb-4 flex-1">
            {post.data.description}
          </p>
          <div class="mt-auto flex flex-wrap gap-2">
            {post.data.tags?.slice(0, 3).map((tag: string) => (
               <span class="text-[10px] font-bold text-accent-600/80 dark:text-accent-400/80">#{tag}</span>
            ))}
          </div>
        </div>
        <!-- Decorative background -->
        <div class="absolute top-0 right-0 -mr-16 -mt-16 w-32 h-32 bg-accent-500/5 rounded-full blur-3xl group-hover:bg-accent-500/10 transition-colors"></div>
      </article>
    ))}
  </div>

  <!-- Empty State -->
  <div id="empty-state" class="hidden text-center py-20">
    <div class="mb-4 text-base-300 dark:text-base-700">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.172 9.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
    </div>
    <h3 class="text-xl font-medium text-base-900 dark:text-base-100">No matches found</h3>
    <p class="mt-2 text-base-500">Try adjusting your search or filters</p>
    <button id="clear-all" class="mt-6 text-accent-600 font-medium hover:underline">Clear all filters</button>
  </div>
</div>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fade-in-up {
    animation: fadeInUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }
  .tag-pill.active {
    @apply bg-accent-600 text-white border-accent-600 shadow-lg scale-105;
  }
  
  .post-card.hidden {
    display: none;
  }

  /* Reading enhancements for mobile */
  @media (max-width: 640px) {
    .search-container {
      @apply gap-4;
    }
    .post-card {
      @apply p-5;
    }
  }
</style>


<script>
  function initFilters() {
    const searchInput = document.getElementById('search-input') as HTMLInputElement;
    const sortSelect = document.getElementById('sort-select') as HTMLSelectElement;
    const tagPills = document.querySelectorAll('.tag-pill');
    const resultsCount = document.getElementById('results-count');
    const emptyState = document.getElementById('empty-state');
    const postsGrid = document.getElementById('posts-grid');
    const clearAllBtn = document.getElementById('clear-all');
    
    if (!postsGrid) return;
    
    // Convert NodeList to Array for easier manipulation
    const allPosts = Array.from(document.querySelectorAll('.post-card')) as HTMLElement[];
    let activeTag = 'all';
    let searchQuery = '';
    let currentSort = 'newest';

    function update() {
      // 1. Filter
      const filteredPosts = allPosts.filter(post => {
        const title = post.getAttribute('data-title') || '';
        const desc = post.getAttribute('data-description') || '';
        const tags = JSON.parse(post.getAttribute('data-tags') || '[]');
        
        const matchesSearch = title.includes(searchQuery) || desc.includes(searchQuery);
        const matchesTag = activeTag === 'all' || tags.includes(activeTag);
        
        return matchesSearch && matchesTag;
      });

      // 2. Sort
      filteredPosts.sort((a, b) => {
        if (currentSort === 'newest') return Number(b.getAttribute('data-date')) - Number(a.getAttribute('data-date'));
        if (currentSort === 'oldest') return Number(a.getAttribute('data-date')) - Number(b.getAttribute('data-date'));
        const titleA = a.getAttribute('data-title') || '';
        const titleB = b.getAttribute('data-title') || '';
        if (currentSort === 'az') return titleA.localeCompare(titleB);
        if (currentSort === 'za') return titleB.localeCompare(titleA);
        return 0;
      });

      // 3. Render
      allPosts.forEach(p => p.classList.add('hidden'));
      
      filteredPosts.forEach((post, index) => {
        post.classList.remove('hidden');
        post.style.order = index.toString();
        // Re-trigger animation delay for visible items
        post.style.animationDelay = `${index * 50}ms`;
      });

      // 4. UI Updates
      if (resultsCount) {
        resultsCount.textContent = `Showing ${filteredPosts.length} article${filteredPosts.length === 1 ? '' : 's'}`;
      }

      const activeFiltersInfo = document.getElementById('active-filters-info');
      if (activeFiltersInfo) {
        if (activeTag !== 'all' || searchQuery !== '') {
          activeFiltersInfo.classList.remove('hidden');
        } else {
          activeFiltersInfo.classList.add('hidden');
        }
      }

      if (filteredPosts.length === 0) {
        postsGrid?.classList.add('hidden');
        emptyState?.classList.remove('hidden');
      } else {
        postsGrid?.classList.remove('hidden');
        emptyState?.classList.add('hidden');
      }
    }

    searchInput?.addEventListener('input', (e) => {
      searchQuery = (e.target as HTMLInputElement).value.toLowerCase();
      update();
    });

    sortSelect?.addEventListener('change', (e) => {
      currentSort = (e.target as HTMLSelectElement).value;
      update();
    });

    tagPills.forEach(pill => {
      pill.addEventListener('click', () => {
        tagPills.forEach(p => p.classList.remove('active'));
        pill.classList.add('active');
        activeTag = pill.getAttribute('data-tag') || 'all';
        update();
      });
    });

    clearAllBtn?.addEventListener('click', () => {
      if (searchInput) searchInput.value = '';
      if (sortSelect) sortSelect.value = 'newest';
      searchQuery = '';
      currentSort = 'newest';
      tagPills.forEach(p => p.classList.remove('active'));
      document.querySelector('[data-tag="all"]')?.classList.add('active');
      activeTag = 'all';
      update();
    });

    // Final layout adjustment: grid needs to use flex/order or append
    postsGrid.style.display = 'grid';
  }

  document.addEventListener('astro:page-load', initFilters);
  initFilters();

</script>
